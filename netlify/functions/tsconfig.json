{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2017", "ES2016", "ES2015", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../../src/lib/db.ts",
    "../../src/types/prisma.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}